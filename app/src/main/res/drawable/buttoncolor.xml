<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#1CB628"/>
                    <!-- alttan gölge -->
                    <corners android:radius="400dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                    android:bottom="8px"
            >
                <shape>
                    <padding android:bottom="30dp"/>
                    <gradient
                            android:startColor="#163C01"
                            android:endColor="#4CAF50"
                            android:angle="270" />
                    <corners
                            android:radius="19dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#12335F"/>
                    <corners android:radius="50dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="50dp"/>
                    <gradient
                            android:startColor="#57C230"
                            android:endColor="#35B11A"
                            android:angle="270" />
                    <corners
                            android:radius="50dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>