<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/table_item_calculator"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:layout_margin="9dp"
              android:layout_marginEnd="4dp"
              android:layout_marginStart="4dp"
              android:clickable="true"
              android:focusable="true"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="22dp"
            android:layout_weight="0.15">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Motor" />

        <TextView

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:id="@+id/motor"
                android:text="" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="22dp"
            android:layout_weight="0.15">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Date" />

        <TextView

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:id="@+id/dateof"
                android:text="" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="22dp"
            android:layout_weight="0.15">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="On/Off" />

        <TextView

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:id="@+id/onoff"
                android:text="" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="22dp"
            android:layout_weight="0.15">

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:id="@+id/action"
                android:background="@null"
                android:src="@drawable/delete_routine" android:layout_marginLeft="20dp" android:layout_marginTop="60dp"
                android:layout_marginStart="20dp" android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>